<% layout('/layouts/boilerplate') -%>
    <!-- this is used to add boilerplate file template in this file -->

    <style>
        .icons {
            display: flex;
        }

        .icon {
            margin-top: 1.5rem;
            text-align: center;
            margin-left: 1.3rem;
            opacity: 0.6;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        .icon:hover {
            opacity: 1;
            cursor: pointer;
        }

        .tax {
            display: none;
        }

        .tax-toggle {
            border: 1px solid rgb(190, 184, 184);
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
            margin-left: 4rem;
            display: flex;
            align-items: center;
            margin-top: 1rem;
            font-size: 1rem;
        }
    </style>

    <body>
        <div class="icons">
            <div class="icon">
                <i class="filter-icon fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-umbrella-beach"></i>
                <p>Beach</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-mountain"></i>
                <p>Mountain</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-house"></i>
                <p>Grand home</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-gamepad"></i>
                <p>Games</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-kitchen-set"></i>
                <p>Chef's kitchens</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-person-swimming"></i>
                <p>Swimming</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-person-skiing"></i>
                <p>Skiing</p>
            </div>
            <div class="icon">
                <i class="filter-icon fa-solid fa-anchor"></i>
                <p>Boats</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                    <label class="form-check-label" for="flexSwitchCheckReverse">Display total before taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-sm-2 row-cols-md-1">
            <% for (let list of gettingData) { %>
                <a href="/listening/<%= list._id %>" class="a-links">
                    <div class="card listening-card">
                        <img src="<%= list.image.url %>" class="card-img-top" alt="..." style="height: 18rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= list.title %>, <%= list.country %>
                                </b> <br>
                                &#x20B9;<%= new Intl.NumberFormat('en-IN', { currency: 'INR' }).format(list.price) %> /
                                    night
                                    <i class="tax">&nbsp;&nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>
    <script>
        let toggleId = document.getElementById("flexSwitchCheckReverse");
        toggleId.addEventListener("click", () => {
            let taxId = document.getElementsByClassName("tax");
            for (info of taxId) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });

        let iconsClasses = document.querySelectorAll(".icon");
        for (icon of iconsClasses) {
            icon.addEventListener("click", () => {
                console.log("icons was clicked");
            });
        };
    </script>